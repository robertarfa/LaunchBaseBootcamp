{% extends 'layout.njk' %}

{% block content %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<form class="card" method="POST" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/9881186/500x500) no-repeat center center / cover"></section>
    
    <section class="details">
        
        <h3>Novo Professor</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
            <input 
                type="url" 
                name="avatar_url"
                placeholder="http://">
            </div>
        </div>

        <div class="item">
            <div>Nome completo</div>
            <div>
            <input 
                type="text"
                name="name" placeholder="Digite o nome completo">
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                >
            </div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div class="div span">
                <span>
                    <input type="radio" name="gender" value="M">Masculino
                </span>
                 <span>
                    <input type="radio" name="gender" value="F">Feminino
                </span>
            </div>
        </div>

        {# <div class="item">
            <div>Grau de escolaridade</div>
            <div>Pós Graduação</div>
        </div>

         <div class="item">
            <div>Tipo de aula</div>
            <div>À distância</div>
        </div> #}

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input type="text" name="services" placeholder="Separe por vírgula">
            </div>
        </div>

        <button type="Submit">Enviar</button>
    </section>
</form>

{% endblock %}